@page
@model MovieLibrary.UI.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movies";
}

<div class="page-header">
    <h1><i class="fas fa-video text-primary me-2"></i>Movies</h1>
    <p class="lead">Browse and manage your movie collection</p>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Movie List</h5>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add New Movie
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Movie[0].Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Movie[0].Director)</th>
                        <th>@Html.DisplayNameFor(model => model.Movie[0].Genre)</th>
                        <th>@Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Movie) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Director!.FirstName)</td>
                            <td>
                                <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Genre.Name)</span>
                            </td>
                            <td>@item.ReleaseDate.ToString("MMMM dd, yyyy")</td>
                            <td class="action-links">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>