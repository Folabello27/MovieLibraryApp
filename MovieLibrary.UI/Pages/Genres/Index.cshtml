@page
@model MovieLibrary.UI.Pages.Genres.IndexModel

@{
    ViewData["Title"] = "Genres";
}

<div class="page-header">
    <h1><i class="fas fa-tags text-primary me-2"></i>Genres</h1>
    <p class="lead">Manage movie genres in your library</p>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Genre List</h5>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add New Genre
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Genre[0].Name)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Genre) {
                        <tr>
                            <td>
                                <span class="badge bg-primary p-2">@Html.DisplayFor(modelItem => item.Name)</span>
                            </td>
                            <td class="action-links">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>